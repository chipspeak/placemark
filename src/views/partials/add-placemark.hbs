<form class="box" action="/category/{{category._id}}/addplacemark" method="POST">
  <label>Enter Placemark Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Title" name="title">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Artist" name="artist">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Duration" name="duration">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Placemark</button>
</form>